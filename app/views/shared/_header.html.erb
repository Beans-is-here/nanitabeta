<!-- app/views/shared/_header.html.erb -->
  <header class="bg-amber-500 shadow w-full py-4 sticky top-0 z-50">
    <div class="flex justify-between items-center px-4 sm:px-8 lg:px-10">
      <h1 class="text-xl sm:text-3xl font-bold text-black">
        <% if user_signed_in? %>
          <%= link_to "nanitabeta?", orders_path %>
        <% else %>
          <%= link_to "nanitabeta?", root_path %>
        <% end %>
      </h1>
      <div class="flex gap-2">
        <% common_btn_class = "bg-amber-500 text-white font-normal border border-white-400 rounded hover:bg-orange-300 transition inline-block align-middle leading-tight py-1 px-2 sm:py-3 sm:px-5 sm:text-sm" %>
        <% if user_signed_in? %>
          <%= link_to t("header.record"), new_order_path, class: common_btn_class %>
            <%= form_with url: destroy_user_session_path, method: :delete, class: "inline" do %>
              <%= button_tag t("header.sign_out"), type: "submit", class: common_btn_class %>
            <% end %>
        <% else %>
          <%= link_to t("header.sign_up"), new_user_registration_path, class: common_btn_class %>
          <%= link_to t("header.sign_in"), new_user_session_path, class: common_btn_class %>
        <% end %>
      </div>
    </div>
  </header>
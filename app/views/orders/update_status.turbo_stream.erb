<% if params[:tab] == "wanted" %>
  <%= turbo_stream.remove dom_id(@order) %>
<% else %>
  <%= turbo_stream.replace dom_id(@order) do %>
    <%= render partial: "orders/card", locals: { order: @order } %>
  <% end %>
<% end %>
<!-- DOM更新命令がHTMLレスポンスとしてクライアントに返る -->
<%= turbo_stream.update "flash" do %>
  <%= render "shared/flash_messages" %>
<% end %>
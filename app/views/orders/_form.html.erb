<% form_url = @order.persisted? ? order_path(@order.order) : orders_path %>
<%= form_with model: @order, url: form_url, class: "new_order", local: true, data: { turbo: false }  do |f| %>
    <div class="flex flex-wrap mb-6">
      <div class="flex items-center me-4">
        <%= f.radio_button :ordered, true, id: "ordered_true" %>
        <%= f.label :ordered, t('orders.new.as_ordered_menu'), for: "ordered_true", class: "ms-2 text-sm font-sm font-medium text-gray-900" %>
      </div>
      <div class="flex items-center me-4">
        <%= f.radio_button :ordered, false, id: "ordered_false" %>
        <%= f.label :ordered, t('orders.new.as_interested_menu'), for: "ordered_false", class: "ms-2 text-sm font-medium text-gray-900" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :store_name, class: "block text-gray-700 text-base mb-2" do %>
          <%= t('orders.new.store') %>*
        <% end %>
      </div>
      <div class="md:w-2/3">
        <%= f.text_field :store_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :menu_name, class: "block text-gray-700 text-base mb-2" do%>
          <%= t('orders.new.menu_name') %>*
        <% end %>
      </div>
      <div class="md:w-2/3">
        <%= f.text_field :menu_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :review_rating, t('orders.new.rating') %>
    </div>
    <div class="md:w-2/3">
      <%= f.select :review_rating,
            options_for_select([
              ['', ''],        # デフォルト空白
              ['★', 1],
              ['★★', 2],
              ['★★★', 3]
            ], selected: nil),
            {}, # HTML options
            class: "shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
    </div>
  </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= f.label :memo, t('orders.new.memo') %>
      </div>
      <div class="md:w-2/3">
        <%= f.text_area :memo, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", placeholder: t('orders.new.memo_limit') %>
      </div>
    </div>

    <div data-controller="image-preview">
      <% f.label :menu_image_url %>
      <%= f.file_field :menu_image_url, 
            data: { 
              image_preview_target: "input", 
              action: "image-preview#previewImage"
            },
            class: 'form-control' %>
      <img data-image-preview-target="preview" class="w-24 h-24 mt-2" />
    </div>

    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3">
        <%= f.submit t("orders.new.create_button"), class: "bg-amber-500 hover:bg-orange-300 text-white font-bold py-2 px-5 rounded focus:outline-none" %>
      </div>
    </div>
  <% end %>
<div data-controller="tabs">
  <!-- タブボタン -->
  <div class="flex space-x-4 mb-6">
    <button data-action="click->tabs#change"
            data-tabs-target="tab"
            data-tab="all"
            class="tab-button font-bold text-gray-700">すべて</button>

    <button data-action="click->tabs#change"
            data-tabs-target="tab"
            data-tab="ordered"
            class="tab-button text-gray-500">注文した</button>

    <button data-action="click->tabs#change"
            data-tabs-target="tab"
            data-tab="wanted"
            class="tab-button text-gray-500">気になった</button>
  </div>

  <!-- 一覧描画部分 -->
  <h2 class="text-2xl font-bold mb-6 text-center">注文履歴</h2>
  <div data-tabs-target="list" id="order-list">
    <%= render partial: "orders/list", locals: { orders: @orders } %>
  </div>
</div>
<div class="w-full max-w-lg mx-auto">
    <h2 class="text-3xl font-bold mb-6 text-left"><%= t("メニュー登録") %></h2>

      <%= form_with model: @order, class: "new_order" do |f| %>
        <div class="flex flex-wrap mb-6">
          <div class="flex items-center me-4">
            <input id="ordered" type="radio" value="" name="ordered_flag" class="w-4 h-4 bg-gray-100 border-gray-300 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600">
            <label for="ordered-radio" class="ms-2 text-sm font-medium text-gray-900">注文したメニューとして登録</label>
          </div>
          <div class="flex items-center me-4">
            <input id="non_ordered" type="radio" value="" name="ordered_flag" class="w-4 h-4 bg-gray-100 border-gray-300 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600">
            <label for="non_ordered-radio" class="ms-2 text-sm font-medium text-gray-900">気になるメニューとして登録</label>
          </div>
        </div>

        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <%= f.label :store, class: "block text-gray-700 text-base mb-2" %>
          </div>
          <div class="md:w-2/3">
          <%= f.text_field :store, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
        </div>
        </div>


        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <%= f.label :menu, class: "block text-gray-700 text-base mb-2" %>
          </div>
          <div class="md:w-2/3">
            <%= f.text_field :menu, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
          </div>
        </div>

        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <%= f.label :review %>
          </div>
          <div class="md:w-2/3">
            <%= f.text_field :review, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
          </div>
        </div>

        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <%= f.label :memo %>
          </div>
          <div class="md:w-2/3">
            <%= f.text_area :memo, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
          </div>
        </div>

        <div class="md:flex md:items-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3">
          <%= f.submit nil, class: "bg-amber-500 hover:bg-orange-300 text-white font-bold py-2 px-5 rounded focus:outline-none" %>
          </div>
        </div>
      <% end %>
    </div>
</div>
<div class="w-full max-w-lg mx-auto">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-3xl font-bold mb-6 text-center"><%= t("devise.passwords.edit.Change your password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mt-4">
    <%= f.label :password, class: "block text-gray-700 text-base font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: t("devise.registrations.new.At least 6 characters, including uppercase, lowercase letters, and numbers"), class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="field mt-4">
    <%= f.label :password_confirmation, class: "block text-gray-700 text-base font-bold mb-2" %>
    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="flex items-center justify-center mt-6">
    <%= f.submit t("devise.passwords.edit.Change my password"), class: "bg-amber-500 hover:bg-orange-400 text-white font-bold py-2 px-5 rounded focus:outline-none" %>
  </div>
<% end %>
  </div>
</div>